<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="define"
        android:title="@string/define" >
        
        <com.arjerine.xdictionary.ListPopupLanguage
            android:key="languageModeVal"
            android:entries="@array/languageMode"
            android:entryValues="@array/languageVals"
            android:title="@string/popup_language"
            android:defaultValue="1" />
        
        <com.arjerine.xdictionary.ListPopupGravity
            android:key="gravityModeVal"
            android:entries="@array/gravityMode"
            android:entryValues="@array/gravityVals"
            android:title="@string/popup_gravity" 
            android:defaultValue="1" />
   </PreferenceCategory>
        
   <PreferenceCategory    
        android:key="test"
        android:title="@string/test" >
        
        <com.arjerine.textxposed.TestBox
            android:key="testBox"
            text="@string/text_test" />
   </PreferenceCategory>
   
        
</PreferenceScreen>